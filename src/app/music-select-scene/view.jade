include ~bemuse/view/utils

h1 Select Music

+section('loading')

  p.loading Loadingâ€¦

+inverted-section('loading')

  ul.music-list
    +section('songs')
      li.music-list-item(class="{{isSongSelected(this) ? 'active' : ''}}"
                         on-click="selectSong(this)")
        div.title {{title}}
        div.artist {{artist}}
        div.genre {{genre}}

  +section('chart')
    section.selected-song
      +section('info')
        section.song-info
          div.song-info--genre {{genre}}
          div.song-info--title {{title}}
          div.song-info--artist {{artist}}
      ul.chart-list
        +section('song.charts')
          li(class="{{isChartSelected(this) ? 'active' : ''}}"
             on-click="selectChart(this)") {{info.level}}
      dl
        dt MD5
        dd {{md5}}
        dt Filename
        dd {{file}}
        +section('song')
          dt Artist URL
          dd {{artist_url}}
          dt BMS URL
          dd {{bms_url}}
          dt Song URL
          dd {{song_url}}
          dt Long Version URL
          dd {{long_url}}

